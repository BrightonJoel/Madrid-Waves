{
  "kind": "collectionType",
  "collectionName": "blogs",
  "info": {
    "name": "Blog"
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "unique": false,
      "required": true
    },
    "Body": {
      "type": "richtext",
      "required": true
    },
    "CoverImage": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "Likes": {
      "type": "integer",
      "default": 0
    },
    "Views": {
      "type": "integer",
      "default": 0
    }
  }
}
